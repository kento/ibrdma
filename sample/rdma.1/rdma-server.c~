static struct context *s_ctx = NULL;
static int connections = 0;
pthread_t listen_thread;
static int allocated_mr_size = 0;

//pthread_t poll_thread[RDMA_THREAD_NUM_S];
//int poll_thread_count = 0;

struct poll_cq_args{
  int thread_id;
};

struct RDMA_buff {
  char *buff;
  uint64_t buff_size;
  char *recv_base_addr;
  struct ibv_mr *mr;
  uint64_t mr_size;
  uint64_t recv_size;
};


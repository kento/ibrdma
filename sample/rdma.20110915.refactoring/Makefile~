.PHONY: clean

#CFLAGS  := -Wall -Werror -g
CFLAGS  := -Wall -g
LD      := gcc
LDFLAGS := ${LDFLAGS} -lrdmacm

APPS    := rdma-client rdma-server

all: ${APPS}

rdma-client: rdma-common.o rdma-client.o rdma-common.h rdma-client.c rdma-common.c
	${LD} -o $@ $^ ${LDFLAGS}

rdma-server: rdma-common.o rdma-server.o
	${LD} -o $@ $^ ${LDFLAGS}

clean:
	rm -f *.o ${APPS}

